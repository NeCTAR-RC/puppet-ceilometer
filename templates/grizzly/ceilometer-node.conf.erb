[DEFAULT]

# Logging
log_dir=/var/log/ceilometer
<% if @logdebug %>
debug=true
verbose=true
<% end %>

# Service credentials
os_username=<%= keystone_user %>
os_password=<%= keystone_password %>                  
os_tenant_name=<%= keystone_service_tenant %>
os_auth_url=<%= keystone_protocol %>://<%= keystone_host %>:5000/v2.0/

# RabbitMQ
rabbit_hosts="<%= rabbit_hosts %>"
rabbit_userid=<%= rabbit_user %>
rabbit_password=<%= rabbit_password %>
rabbit_virtual_host=<%= rabbit_virtual_host %>
rabbit_ha_queues=True
rabbit_durable_queues=True
rabbit_use_ssl=True

host=<%= hostname %>


#not used but needed for upgrades
database_connection=sqlite:////var/lib/ceilometer/ceilometer.sqlite
